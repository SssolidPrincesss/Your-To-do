<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:padding="2dp">

    <!-- Звезда на заднем плане (векторное изображение) -->
    <ImageView
        android:id="@+id/day_star"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="-7dp"
        android:visibility="gone"
        android:scaleType="fitCenter" />

    <!-- Контент на переднем плане -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:background="@android:color/transparent">

        <!-- Номер дня -->
        <TextView
            android:id="@+id/day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Индикатор событий (волнистая линия под числом) -->
        <ImageView
            android:id="@+id/day_events_indicator"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_wavy_line"
            android:visibility="gone"
            android:layout_marginTop="4dp"
             />

    </LinearLayout>

</FrameLayout>