<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/todobackground"> <!-- Ваш фон на ВСЕМ экране -->

    <!-- ШТОРКА - растягиваем на всю высоту -->
    <include
        android:id="@+id/side_panel"
        layout="@layout/drawer_panel"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

    <!-- ОСНОВНОЙ КОНТЕНТ с margin для шторки -->
    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        > <!-- Повторяем фон -->

        <!-- Контейнер для фрагментов -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E305BAB"
            app:menu="@menu/bottom_navigation"
            app:labelVisibilityMode="labeled" />

    </LinearLayout>

    <!-- Кнопка открытия шторки -->
    <LinearLayout
        android:id="@+id/drawer_handle"
        android:layout_width="38dp"
        android:layout_height="58dp"
        android:layout_gravity="start|bottom"
        android:orientation="vertical"
        android:gravity="bottom"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp"
        android:translationZ="10dp"
        android:outlineProvider="bounds"
        android:padding="4dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_handle"
            android:layout_marginBottom="32dp"
            android:contentDescription="Открыть меню" />
    </LinearLayout>

</FrameLayout>