<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#96E6E6E6"
    android:padding="8dp">


    <!-- Карточка статуса пользователя -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:strokeWidth="0dp"
        app:strokeColor="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_status_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Новичок"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />

                    <TextView
                        android:id="@+id/current_status_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Начинающий пользователь"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <!-- Кнопка с иконкой информации -->
                <ImageButton
                    android:id="@+id/btn_info"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_info_outline"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="Информация"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/current_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ★"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFC107" />
            </LinearLayout>



            <ProgressBar
                android:id="@+id/status_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:max="100"
                android:progressTint="#4CAF50"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/points_to_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ★ до статуса Гений"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_gravity="end" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Табы: Все / Полученные / Неполученные -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Все" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Полученные" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Неполученные" />
    </com.google.android.material.tabs.TabLayout>

    <!-- Список достижений -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/achievements_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Личный рейтинг пользователя (глобальный) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="#D2E4F0"
        app:strokeWidth="0dp"
        app:strokeColor="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <!-- Внутренний контейнер с тем же цветом фона -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="#BED6E6">  <!-- Тот же цвет, что и у карточки -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Личный рейтинг"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/total_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ★"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Очки рейтинга"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="За задачу:"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 ★"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>