<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/achievement_icon_locked"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_achievement_locked"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/achievement_name_locked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название достижения"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:id="@+id/achievement_description_locked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Описание достижения"
                    android:textSize="14sp"
                    android:textColor="#BDBDBD"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/achievement_points_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 ★"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#BDBDBD"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Прогресс бар -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/achievement_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="#2196F3" />

            <TextView
                android:id="@+id/achievement_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/10"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>